<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.twitterClone.ui.fragment.SignUp">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="First name"
        app:layout_constraintStart_toEndOf="@id/margin_start_vertical_guideline"
        app:layout_constraintEnd_toStartOf="@id/margin_end_vertical_guideline"
        app:layout_constraintBottom_toTopOf="@id/tv_last_name"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Last name"
        app:layout_constraintStart_toEndOf="@id/margin_start_vertical_guideline"
        app:layout_constraintEnd_toStartOf="@id/margin_end_vertical_guideline"
        app:layout_constraintBottom_toTopOf="@id/half_horizontal_guideline"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:layout_constraintStart_toEndOf="@id/margin_start_vertical_guideline"
        app:layout_constraintEnd_toStartOf="@id/margin_end_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/half_horizontal_guideline"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_password"
        android:hint="Password"
        app:layout_constraintStart_toEndOf="@id/margin_start_vertical_guideline"
        app:layout_constraintEnd_toStartOf="@id/margin_end_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/margin_start_vertical_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".03"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/margin_end_vertical_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".97"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/half_horizontal_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5"
        />


</androidx.constraintlayout.widget.ConstraintLayout>